		"express": "^5.2.1",
		"firebase": "^12.4.0",
		"framer-motion": "^12.23.26",
		"happy-dom": "^15.7.4",
		"lucide-react": "^0.441.0",
		"mongoose": "^9.0.1",
		"pusher-js": "^8.4.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-icons": "^5.5.0",
