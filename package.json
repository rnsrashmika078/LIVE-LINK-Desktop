	"main": "dist-electron/main.js",
	"build": {
		"appId": "com.electron.react.tailwind",
		"mac": {
			"target": [
				"dmg",
				"zip"
			]
		},
		"win": {
			"target": [
				"nsis",
				"zip"
			]
		},
		"linux": {
			"target": [
				"AppImage",
				"deb",
				"rpm",
